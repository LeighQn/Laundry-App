<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.StatusFragment"
    android:background="@color/baby_blue">

        <!-- _________________BACKGROUND_________________ -->

        <ImageView
            android:id="@+id/img_bubble_up"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-10dp"
            android:background="@mipmap/bubbles_foreground"
            android:layout_alignParentRight="true"
            android:alpha="0.5"/>


        <ImageView
            android:id="@+id/img_bubble_down"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginBottom="-10dp"
            android:alpha="0.5"
            android:background="@mipmap/bubbles_foreground"
            android:rotation="@integer/material_motion_duration_medium_1"/>

        <ImageView
            android:id="@+id/imgSingleBubble1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@mipmap/single_bubble_image_foreground"
            android:alpha="0.2"
            android:layout_marginTop="200dp"/>

        <ImageView
            android:id="@+id/imgSingleBubbleLeftTop1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/single_bubble_image_foreground"
            android:alpha="0.2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/imgSingleBubbleLeftTop2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/single_bubble_image_foreground"
            android:alpha="0.2"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="-20dp"/>

        <ImageView
            android:id="@+id/imgSingleBubbleLeftTop3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/single_bubble_image_foreground"
            android:alpha="0.2"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/imgSingleBubble3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@mipmap/single_bubble_image_foreground"
            android:alpha="0.2"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="250dp"/>

        <ImageView
            android:id="@+id/imgSingleBubble4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@mipmap/single_bubble_image_foreground"
            android:alpha="0.5"
            android:layout_alignParentRight= "true"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="580dp"/>>

        <!-- _________________TITLE_________________ -->

        <TextView
            android:id="@+id/txtMyReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="RESERVATION STATUS"
            android:textColor="@color/editTextColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_below="@id/txtMyReservation"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/editTextColor"
            android:text="Track your laundry status here!"/>

        <!-- _________________NOTIFICATION BELL_________________ -->

        <ImageView
            android:id="@+id/imgNotificationBell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/notification_bell_icon_foreground"
            android:layout_alignParentRight= "true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>


        <!-- _________________RECYCLERVIEW VIEW_________________ -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_status"
            android:layout_below="@id/txtTrack"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"/>


</RelativeLayout>