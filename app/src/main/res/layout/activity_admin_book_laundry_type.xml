    <TextView
        android:id="@+id/txt_divider3_admin"
        android:layout_below="@id/txt_all_white_admin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="@color/baby_blue"
        android:text="____________________________________________" />

    <TextView
        android:id="@+id/txt_comforter_admin"
        android:layout_below="@id/txt_table_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="@color/editTextColor"
        android:text="Comforter:" />

    <TextView
        android:id="@+id/etxt_comforter_admin"
        android:layout_below="@id/txt_table_admin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
