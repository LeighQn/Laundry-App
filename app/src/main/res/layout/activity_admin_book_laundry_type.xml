        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="@color/baby_blue"
        android:text="____________________________________________" />

    <TextView
        android:id="@+id/txt_maong_admin"
        android:layout_below="@id/txt_all_white_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="@color/editTextColor"
        android:text="Maong:" />

    <TextView
        android:id="@+id/etxt_maong_admin"
        android:layout_below="@id/etxt_all_white_admin"
        android:layout_width="50dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="20dp"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="@color/editTextColor"
