    <TextView
        android:id="@+id/etxt_bedsheet_admin"
        android:layout_below="@id/etxt_all_white_admin"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginRight="100dp"
