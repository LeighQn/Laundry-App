<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".USERS.Customer.Screens.CustomerProfileUpdate"
    android:background="@color/baby_blue">

    <ImageView
        android:id="@+id/imgBubbleUp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-10dp"
        android:background="@mipmap/bubbles_foreground"
        android:layout_alignParentRight="true"
        android:alpha="0.5"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/imgBubbleDown"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-10dp"
        android:layout_marginBottom="-10dp"
        android:alpha="0.5"
        android:background="@mipmap/bubbles_foreground"
        android:rotation="@integer/material_motion_duration_medium_1"/>

    <ImageView
        android:id="@+id/imgSingleBubble1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@mipmap/single_bubble_image_foreground"
        android:alpha="0.2"
        android:layout_marginTop="200dp"/>

    <ImageView
        android:id="@+id/imgSingleBubbleLeftTop1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/single_bubble_image_foreground"
        android:alpha="0.5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/imgSingleBubbleLeftTop2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/single_bubble_image_foreground"
        android:alpha="0.5"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="-20dp"/>

    <ImageView
        android:id="@+id/imgSingleBubbleLeftTop3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/single_bubble_image_foreground"
        android:alpha="0.5"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/imgSingleBubble3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@mipmap/single_bubble_image_foreground"
        android:alpha="0.2"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="250dp"/>

    <ImageView
        android:id="@+id/imgSingleBubble4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@mipmap/single_bubble_image_foreground"
        android:alpha="0.5"
        android:layout_alignParentRight= "true"
        android:layout_marginRight="-50dp"
        android:layout_marginTop="580dp"/>

    <!-- _________________TITLE_________________ -->
    <!-- _________________TITLE_________________ -->

    <Button
        android:id="@+id/btn_to_home_profile_saved_customer"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_icon"
        android:backgroundTint="@color/editTextColor"/>

    <TextView
        android:id="@+id/txtMyReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/editTextColor"
        android:text="PROFILE"/>



    <!-- _________________PROFILE PICTURE_________________ -->

    <ImageView
        android:id="@+id/image_profile_customer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/username_24"
        />



    <!-- _________________TEXT FIELDS_________________ -->

    <TextView
        android:id="@+id/txt_title_customer_name_update"
        android:layout_below="@id/image_profile_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="18sp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/editTextColor"
        android:hint="Name:"/>

    <EditText
        android:id="@+id/txt_customer_name_update"
        android:layout_below="@id/image_profile_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="18sp"
        android:inputType="text"
        android:textColor="@color/black"
        android:hint="First Name"
        android:text="Justine Leyson"/>

    <TextView
        android:id="@+id/txt_title_username_update"
        android:layout_below="@id/txt_customer_name_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="18sp"
        android:inputType="text"
        android:textColor="@color/editTextColor"
        android:textColorHint="@color/editTextColor"
        android:hint="Username:" />

    <EditText
        android:id="@+id/txt_customer_username_update"
        android:layout_below="@id/txt_customer_name_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:inputType="text"
        android:hint="Username"
        android:text="just1"/>

    <TextView
        android:id="@+id/txt_title_customer_email_update"
        android:layout_below="@id/txt_customer_username_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="18sp"
        android:inputType="text"
        android:textColor="@color/editTextColor"
        android:textColorHint="@color/editTextColor"
        android:hint="Phone:" />


    <EditText
        android:id="@+id/txt_customer_phone_update"
        android:layout_below="@id/txt_customer_username_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:textSize="18sp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textColor="@color/black"
        android:hint="Email Address"
        android:text="09154584569"/>

    <TextView
        android:id="@+id/txt_title_purok_update"
        android:layout_below="@id/txt_title_customer_email_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="18sp"
        android:inputType="text"
        android:textColor="@color/editTextColor"
        android:textColorHint="@color/editTextColor"
        android:hint="Purok:" />

    <EditText
        android:id="@+id/txt_customer_address_update"
        android:layout_below="@id/txt_title_customer_email_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:textSize="18sp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textColor="@color/black"
        android:hint="Purok/ Zone"
        android:text="Purok 2"/>

    <TextView
        android:id="@+id/txt_title_barangay_update"
        android:layout_below="@id/txt_title_purok_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:backgroundTint="@color/navy_blue"
        android:textSize="18sp"
        android:inputType="text"
        android:textColor="@color/editTextColor"
        android:textColorHint="@color/editTextColor"
        android:hint="Barangay:" />

    <Spinner
        android:id="@+id/spinner_barangay"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt_customer_address_update"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:elevation="10dp"
        />

    <ImageView
        android:layout_below="@id/txt_customer_address_update"
        android:layout_marginTop="10dp"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:background="@drawable/soft_rounded_with_bg_volor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:alpha="0.5"
        android:backgroundTint="@color/editTextColor"/>

    <ImageView
        android:id="@+id/img_brgy_spinner_icon"
        android:layout_below="@id/txt_customer_address_update"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_baseline_expand_more_24"
        android:backgroundTint="@color/white"/>




    <Button
        android:id="@+id/btn_save_customer_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_customer_address_update"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:text="SAVE" />

</RelativeLayout>