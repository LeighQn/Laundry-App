<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="false">
            <layer-list>
                <!-- SHADOW -->
                <item>
                    <shape>
                        <solid android:color="@color/blue_grotto"/>
                        <stroke android:width="2dp" android:color="@color/blue_grotto" />
                        <!-- alttan gÃ¶lge -->
                        <corners android:radius="5dp"/>
                    </shape>
                </item>
                <!-- BUTTON shadow
                  android:right="5px" to make it round-->
                <item
                    android:bottom="5px"
                    >
                    <shape>
                        <padding android:top="5dp" />
                        <gradient
                            android:startColor="@color/blue_grotto"
                            android:endColor="@color/blue_grotto"
                            android:angle="270" />
                        <corners
                            android:radius="19dp"/>
                        <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="5dp"
                            android:bottom="10dp"/>
                    </shape>
                </item>
            </layer-list>
        </item>

        <item android:state_pressed="true">
            <layer-list>
                <!-- SHADOW -->
                <item>
                    <shape>
                        <solid android:color="@color/blue_grotto"/>
                        <corners android:radius="19dp"/>

                    </shape>
                </item>
                <!-- BUTTON -->
                <item android:bottom="5px">
                    <shape>
                        <padding android:bottom="5dp"/>
                        <solid android:color="@color/blue_grotto"/>
                        <corners
                            android:radius="19dp"/>
                        <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="5dp"
                            android:bottom="10dp"/>
                    </shape>
                </item>
            </layer-list>
        </item>
</selector>